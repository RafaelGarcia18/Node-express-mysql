<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/links/edit/{{link.id}}" method="post">
            <div class="form-group">
              <input
                type="text"
                value="{{link.title}}"
                class="form-control"
                name="title"
                placeholder="Title"
                autofocus
              />
            </div>
            <div class="form-group">
              <input
                type="url"
                value="{{link.url}}"
                name="url"
                class="form-control mt-1"
                placeholder="URL"
              />
            </div>
            <div class="form-group">
              <textarea
                name="description"
                rows="2"
                class="form-control mt-1"
                placeholder="Description"
              >{{link.description}}</textarea>
            </div>
            <div class="form-group">
              <div class="d-grid gap-2">
                <button class="btn btn-success mt-1">Save</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>